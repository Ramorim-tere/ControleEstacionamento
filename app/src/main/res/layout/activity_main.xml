  <Button
      android:id="@+id/Cad-2"
      android:layout_width="410dp"
      android:layout_height="wrap_content"
      android:text="CADASTRAR VAGA" />

  <Button
      android:id="@+id/Cons_3"
      android:layout_width="410dp"
      android:layout_height="wrap_content"
      android:text="CONSULTAR VEICULO" />

  <Button
      android:id="@+id/List_4"
      android:layout_width="410dp"
      android:layout_height="wrap_content"
      android:text="LISTAR VEICULO" />

  <Button
      android:id="@+id/List_5"
      android:layout_width="410dp"
