        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/estacionar" />


  </LinearLayout>

  <Button
      android:id="@+id/Cad-1"
      android:layout_width="410dp"
      android:layout_height="wrap_content"
